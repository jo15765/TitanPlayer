<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fillViewport="true"
    android:padding="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pageIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="@string/page_num"
            android:textColor="#99FFFFFF"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/checkLocalChannels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:focusable="true"
            android:buttonTint="@color/accent"
            android:text="@string/pref_local_channels"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/checkSports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:focusable="true"
            android:buttonTint="@color/accent"
            android:text="@string/pref_sports"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/checkMovies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:focusable="true"
            android:buttonTint="@color/accent"
            android:text="@string/pref_movies"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/pref_favorite_mlb"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editMlbTeam"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_bg"
            android:focusable="true"
            android:hint="@string/pref_favorite_mlb_hint"
            android:inputType="text"
            android:paddingHorizontal="16dp"
            android:textColor="@color/white"
            android:textColorHint="#99FFFFFF" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/pref_favorite_nfl"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editNflTeam"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_bg"
            android:focusable="true"
            android:hint="@string/pref_favorite_nfl_hint"
            android:inputType="text"
            android:paddingHorizontal="16dp"
            android:textColor="@color/white"
            android:textColorHint="#99FFFFFF" />

        <CheckBox
            android:id="@+id/checkKids"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:focusable="true"
            android:buttonTint="@color/accent"
            android:text="@string/pref_kids"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/pref_auto_favorites"
            android:textColor="#99FFFFFF"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.2" />

        <Button
            android:id="@+id/btnPreferencesContinue"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:minWidth="200dp"
            android:background="@drawable/btn_primary"
            android:focusable="true"
            android:text="@string/continue_to_guide"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</ScrollView>
