<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="48dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:text="@string/setup_choice_title"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnBasicSetup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:minHeight="64dp"
        android:background="@drawable/btn_primary"
        android:focusable="true"
        android:paddingHorizontal="24dp"
        android:text="@string/basic_setup"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="@string/basic_setup_subtitle"
        android:textColor="#99FFFFFF"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnAdvancedSetup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="64dp"
        android:background="@drawable/btn_primary"
        android:focusable="true"
        android:paddingHorizontal="24dp"
        android:text="@string/advanced_setup"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/advanced_setup_subtitle"
        android:textColor="#99FFFFFF"
        android:textSize="14sp" />
</LinearLayout>
